{
    "name": "NetflixTimeElapsed",
    "description": "Adds show elapsed time in top right corner of the screen and few additional, but useful, features.",
    "version": "1.0",
    "author": "christosza.czugaszwili",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "browser_action": {
        "default_title": "NetflixTimeElapsed",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": ["https://www.netflix.com/watch/*"],
        "css": ["content_css.css"],
        "js": ["content_script.js"]
    }],
    "manifest_version": 2
}